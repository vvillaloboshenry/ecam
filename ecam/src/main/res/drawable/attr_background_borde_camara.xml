<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stroke con borde -->
    <item
        android:left="-6dp"
        android:right="-6dp">

        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="5dp"
                android:color="#000000" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="-5dp"
        android:right="-5dp"
        android:top="2dp">

        <shape android:shape="rectangle">

            <solid android:color="@android:color/transparent" />
            <corners android:radius="11dp" /> <!-- Radio de las esquinas -->
            <stroke
                android:width="4dp"
                android:color="#000000" />
        </shape>
    </item>
</layer-list>
